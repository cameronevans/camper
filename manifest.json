{
  "manifest_version": 2,
  "name": "camper",
  "version": "0.1.1",
  "description": "for camping",
  "icons": {
    "16": "icons/camper-inactive.png",
    "16": "icons/camper-active-0.png",
    "16": "icons/camper-active-1.png",
    "16": "icons/camper-active-2.png"
  },
  "background": {
    "scripts": [
      "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "./dist/background.js"
    ]
  },
  "page_action": {
    "browser_style": false,
    "default_icon": "icons/camper-inactive.png",
    "default_title": "camper"
  },
  "permissions": [
    "*://*.bandcamp.com/*",
    "*://*.bcbits.com/*",
    "downloads",
    "debugger",
    "activeTab",
    "tabs"
  ]
}
